/*分类*/

.scroll-menu{
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  height: 65rpx;
  line-height: 65rpx;
}

.scroll-menu-item {
  width: 160rpx;
  height: auto;
  margin-right: 23rpx;
  display: inline-block;
  text-align: center;
}

.nav-tab-item {
  width: 250rpx;
  text-align: center;
  line-height: 88rpx;
  color: rgb(102, 102, 102);
}

.nav-tab-item.active {
  border-bottom: 2rpx solid rgba(254, 78, 69, 0.8);
}

/* swipper属性 */

swiper {
  display: block;
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/*商品展示*/

.menu-container {
  overflow: hidden;
  height: auto;
  display: flex;
  background-color: white;
  flex-direction: row;
}
.scroll-product{
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  line-height: 65rpx;
}

/*菜品信息*/

.pro-item {
  width: 100%;
  padding: 16rpx 1.5em;
  border-bottom: 2rpx solid #ccc;
}

.pro-item-wrp {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.pro-item-pic {
  width: 158rpx;
  margin-right: 1em;
}

.pro-item-pic image {
  width: 158rpx;
  height: 120rpx;
  margin: 0 auto;
}

.pro-item-info {
  width: 150rpx;
  padding-left: 16rpx;
  flex: 1;
}

.pro-item-name {
  color: #454545;
  font-size: 26rpx;
}

.pro-item-sales {
  color: #ccc;
  font-size: 20rpx;
  line-height: 50rpx;
}

.pro-item-money {
  color: #f50909;
  font-size: 26rpx;
}

.pro-header {
  height: 10rpx;
}

.pro-footer {
  /*background: red;*/
  height: 100rpx;
}

.pro-footer-tip {
  height: 50rpx;
}

.pro-footer-tip text{
  text-align: center;
}

/*操作商品数量*/

.pro-item-count {
  width: 260rpx;
  display: flex;
  font-size: 26rpx;
  padding: 60rpx 0 0 10rpx;
}

.pro-item-tab {
  width: 60rpx;
  height: 60rpx;
}

.pro-item-count-minus {
  width: 60rpx;
  height: 60rpx;
}

.pro-item-count-text {
  color: #ccc;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}

.pro-item-count-plus {
  width: 60rpx;
  height: 60rpx;
}

.image{
  width: 100%;
  height: 100%;
} 

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

/*左侧菜单*/

.menu-item-wrp {
  text-align: center;
}

.menu-item {
  width: 200rpx;
  height: 200rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.m-item-icon {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%;
}

.m-item-title {
  font-size: 24rpx;
  font-weight: bold;
  color: black;
}

.left-side {
  height: 1000rpx;
  padding-bottom: 88rpx;
  display: flex;
  width: 200rpx;
  background-color: #fff;
  flex-direction: column;
}

/*右侧菜品*/

.dish-category-title {
  font-size: 22rpx;
  color: #888;
  border-bottom: 2rpx solid #ccc;
  padding: 20rpx 0;
  padding-left: 1.5em;
  margin-bottom: 6rpx;
}

.right-side {
  width: 100%;
  height: 1000rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}

.menu-footer {
  height: 100rpx;
}