/*分类*/

.scroll-menu {
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}

.scroll-menu-item {
  display: inline-block;
  text-align: center;
}

.menu-item {
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 30rpx;
  text-align: center;
  padding: 0 10rpx;
}

.menu-item-text {
  font-size: 28rpx;
  color: black;
  letter-spacing: 10rpx;
}

.scroll-menu-item.selected .menu-item-text {
  color: red;
}

.scroll-menu-item.selected .menu-item {
  border-bottom: 2rpx solid red;
}

.nav-tab-item {
  width: 250rpx;
  text-align: center;
  line-height: 88rpx;
  color: rgb(102, 102, 102);
}

.nav-tab-item.active {
  border-bottom: 2rpx solid rgba(254, 78, 69, 0.8);
}

/* swipper属性 */

swiper {
  display: block;
  height: 300rpx;
}

/*商品展示*/

.menu-container {
  overflow: hidden;
  height: auto;
  display: flex;
  background-color: white;
  flex-direction: row;
}

.scroll-product {
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  line-height: 65rpx;
}

/*商品信息*/

.pro-item {
  padding: 16rpx 1.5em;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.pro-item-wrp {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.pro-item-pic {
  width: 158rpx;
  margin-right: 1em;
}

.pro-item-pic image {
  margin: 0 auto;
  width: 158rpx;
  height: 158rpx;
}

.pro-item-info {
  width: 150rpx;
  padding-left: 16rpx;
  flex: 1;
}

.pro-item-name {
  color: #454545;
  font-size: 32rpx;
}

.pro-item-sales {
  color: #ccc;
  font-size: 28rpx;
  line-height: 50rpx;
}

.pro-item-money {
  color: #f50909;
  font-size: 28rpx;
}

.pro-header {
  height: 10rpx;
}

.pro-footer {
  /*background: red;*/
  height: 100rpx;
}

.pro-footer-tip {
  height: 50rpx;
}

.pro-footer-tip text {
  text-align: center;
}

/*操作商品数量*/

.pro-item-count {
  display: flex;
  font-size: 26rpx;
  padding: 60rpx 0 0 10rpx;
}

.pro-item-tab {
  width: 60rpx;
  height: 60rpx;
}

.dish-category-title {
  line-height: 60rpx;
  padding-left: 1em;
  font-size: 38rpx;
}

.pro-item-count-minus {
  width: 60rpx;
  height: 60rpx;
}

.pro-item-count-text {
  color: #ccc;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}

.pro-item-count-plus {
  width: 60rpx;
  height: 60rpx;
}

.image{
  width: 100%;
  height: 100%;
}

/*  加载更多   */

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
