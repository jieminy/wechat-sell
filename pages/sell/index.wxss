.image {
  width: 100%;
  height: 100%;
}

/*tab导航*/

.swiper-item {
  display: block;
  height: 300rpx;
}

.scroll-nav-bar{
  overflow: hidden;
  white-space: nowrap;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  height: 65rpx;
  line-height: 65rpx;
}

.item_list {
  width: 160rpx;
  height: auto;
  margin-right: 23rpx;
  display: inline-block;
  text-align: center;
}

.nav-tab-item {
  width: 250rpx;
  text-align: center;
  line-height: 88rpx;
  color: rgb(102, 102, 102);
}

.nav-tab-item.active {
  border-bottom: 2rpx solid rgba(254, 78, 69, 0.8);
}

/*菜单wrap*/

.menu-wrp {
  overflow: hidden;
  width: 750rpx;
  height: 1000rpx;
  display: flex;
  background-color: white;
  flex-direction: row;
}

/*左侧菜单*/

.menu-item-wrp {
  text-align: center;
}

.menu-item {
  width: 200rpx;
  height: 200rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.m-item-icon {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%;
}

.m-item-title {
  font-size: 24rpx;
  font-weight: bold;
  color: black;
}

.left-side {
  height: 1000rpx;
  padding-bottom: 88rpx;
  display: flex;
  width: 200rpx;
  background-color: #fff;
  flex-direction: column;
}

/*右侧菜品*/

.dish-category-title {
  font-size: 22rpx;
  color: #888;
  border-bottom: 2rpx solid #ccc;
  padding: 20rpx 0;
  padding-left: 1.5em;
  margin-bottom: 6rpx;
}

.right-side {
  width: 100%;
  height: 1000rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}

.menu-footer {
  height: 100rpx;
}

/*菜品信息*/

.dish-item {
  width: 100%;
  padding: 16rpx 1.5em;
  border-bottom: 2rpx solid #ccc;
}

.dish-item-wrp {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.dish-item-pic {
  width: 158rpx;
  margin-right: 1em;
}

.dish-item-pic image {
  width: 158rpx;
  height: 120rpx;
  margin: 0 auto;
}

.dish-item-info {
  width: 150rpx;
  padding-left: 16rpx;
  flex: 1;
}

.dish-item-name {
  color: #454545;
  font-size: 26rpx;
}

.dish-item-sales {
  color: #ccc;
  font-size: 20rpx;
  line-height: 50rpx;
}

.dish-item-money {
  color: #f50909;
  font-size: 26rpx;
}

.dish-footer {
  /*background: red;*/
  height: 100rpx;
}

/*操作菜品数量*/

.dish-item-count {
  width: 260rpx;
  display: flex;
  font-size: 26rpx;
  padding: 60rpx 0 0 10rpx;
}

.dish-item-tab {
  width: 60rpx;
  height: 60rpx;
}

.dish-item-count-minus {
  width: 60rpx;
  height: 60rpx;
}

.dish-item-count-text {
  color: #ccc;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}

.dish-item-count-plus {
  width: 60rpx;
  height: 60rpx;
}
