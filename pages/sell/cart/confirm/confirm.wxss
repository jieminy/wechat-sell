.confirm-scroll {
  overflow: hidden;
}

.address-infos {
  padding: 0 1em;
}

.hot-center{
  border-bottom: 1px solid #f2f2f2;
}

.hot-center button {
  width: 8em;
  background-color: #fff;
  font-size: 24rpx;
  margin: 1em auto;
}

.address-text-wrap{
  padding: .5em 0;
}

.address-text{
  font-size: 22rpx;
  color: #999;
}

.cart-tab-wrp {
  height: 100rpx;
  background: rgba(255, 255, 255, 0.9);
  width: 100%;
  color: black;
  border-top: 1px solid #f2f2f2;
}

.cart-item-total {
  padding-left: 30rpx;
  line-height: 100rpx;
}

.cart-item-icon-wrp {
  width: 110rpx;
  height: 120rpx;
  flex-direction: row;
  top: -4rpx;
}

.cart-item-icon {
  width: 90rpx;
  height: 90rpx;
}

.image{
  width: 90rpx;
  height: 90rpx;
}

.cart-item-total-num {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  font-size: 22rpx;
  color: white;
  line-height: 36rpx;
  border-radius: 36rpx;
  text-align: center;
}

.cart-item-total-price {
  font-size: 36rpx;
  color: #ed7e05;
}

.cart-tab-item-btn {
  width: 160rpx;
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  background: #f5a22d;
  color: #fff;
  float: right;
  text-align: center;
}

.cart-tab-item {
  width: 375rpx;
}
