.cart-main{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.right-side{
  flex: 1;
  overflow: hidden;
}

/*底部浮动*/
.cart-tab-wrp{
  height: 100rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction:row;
  width: 100%;
  color: black
}
.cart-item-total{
  padding-left: 30rpx;
  min-width: 160rpx;
}
.cart-item-icon-wrp{
  width: 110rpx;
  height: 90rpx;
  position: absolute;
  top:-4rpx;
}
.cart-item-icon{
  width: 90rpx;
  height: 90rpx;

}
.cart-item-total-num{
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    font-size: 22rpx;
    color: white;
    line-height: 36rpx;
    border-radius: 36rpx;
    text-align: center;
    position: absolute;
    right: 2rpx;
}
.cart-item-total-price{
    display: inline-block;
    font-size: 36rpx;
    color: #ed7e05;
    line-height: 100rpx;
    text-align: center;
}
.cart-tab-item-btn{
    width: 100%;
    display: block;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 28rpx;
    color: #fff;
    float: right;
    text-align: center;
}

/*菜品信息*/
.dish-item{
  padding: 16rpx 1.5rem;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.dish-item-wrp{
  width:100%;
  display:flex;
  flex-direction:row;
}
.dish-item-pic{
  width:158rpx;
  margin-right: 1em;
}
.dish-item-pic image{
   width: 158rpx;
   height: 120rpx;
   margin: 0 auto
}
.dish-item-info{
  padding-left: 16rpx;
  flex:1;
  overflow:hidden;
  white-space: nowrap;
}
.dish-item-name{
  color: #454545;
  font-size: 32rpx;
}
.dish-item-sales{
  color: #ccc;
  font-size:28rpx;
  line-height: 50rpx
}
.dish-item-name,.dish-item-sales{
  width: 100%;
  display: block;
}

.dish-item-name text,.dish-item-sales text{
  display: block;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
}

.dish-item-money{
  color: #f50909;
  font-size: 28rpx;
}
.dish-footer{
  /*background: red;*/
  height: 100rpx;
}
/*操作菜品数量*/
.dish-item-count{
  display: flex;
  font-size: 26rpx;
}
.dish-item-tab{
  width: 60rpx;
  height: 60rpx;
}
.dish-item-count-minus{
  width: 50rpx;
  height: 50rpx;
}
.dish-item-count-text{
  color: #ccc;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center

}
.dish-item-count-plus{
  width: 50rpx;
  height: 50rpx;
}
.image{
  width: 100%;
  height: 100%
}