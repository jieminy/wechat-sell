/*商品信息*/
.detail {
  margin-top: 1em;
  margin-bottom: 0rpx;
  padding-left: 1em;
  line-height: 40rpx;
  font-size: 40rpx;
}

.detail .title {
  color: black;
}
.detail .price {
  color: red;
}
.detail .sales {
  margin-left: 1em;
}
.detail .desc{
  color: #999;
  font-size: 30rpx;
  padding: 15rpx 0;
}

/* swipper属性 */

swiper {
  display: block;
  height: 500rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}


/* 底部悬浮栏 */
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green {
  background-color: #4caf50; /* Green */
}
.button-red {
  background-color: #f44336; /* 红色 */
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 80%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx 40rpx;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}

/* 占位 */
.temp {
  height: 100rpx;
}