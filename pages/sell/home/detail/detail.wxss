/*商品信息*/

.detail {
  margin-top: 1em;
  margin-bottom: 0rpx;
  padding-left: 1em;
  line-height: 32rpx;
  font-size: 32rpx;
}

.detail .title {
  color: black;
}

.detail .price {
  color: red;
  font-size: 28rpx;
}

.detail .sales {
  margin-left: 1em;
  margin-right: 1em;
}

.detail .desc {
  color: #999;
  font-size: 28rpx;
  padding: 15rpx 0;
}

/* swipper属性 */

swiper {
  display: block;
  height: 500rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

/* 底部悬浮栏 */

.detail-nav {
  align-items: center;
  background-color: #fff;
}

.button-red {
  background-color: #f44336; /* 红色 */
}

.image_detail {
  width: 100%;
}

.detail-nav button {
  color: white;
  text-align: center;
  text-decoration: none;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 100%;
  height: 100%;
  line-height: 100rpx;
}

.detail-nav image {
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx 40rpx;
}

.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}

/* 占位 */

.temp {
  height: 100rpx;
}

.cart {
  position: relative;
}

.cart .cart-total {
  position: absolute;
  right: 28rpx;
  top: 12rpx;
  background: red;
  border-radius: 50%;
  color: #fff;
  font-size: 28rpx;
  padding: 5rpx;
}
