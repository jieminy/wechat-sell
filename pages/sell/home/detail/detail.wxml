<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{product.detailIconList}}" wx:key="advId" wx:for-item="icon">
    <swiper-item>
      <image src='{{icon}}'></image>
    </swiper-item>
  </block>
</swiper>

<scroll-view scroll-y="true">
  <view class="detail">
    <view class = "title ">
      <text class="title">{{product.productName}} {{product.weight}}</text>
    </view>
     <view >
      <text >{{product.productDescription}}</text>
    </view>
    <view class='price'>
      <text>￥{{product.productPrice}}</text>
    </view>
     <view>
      <text>已售{{product.productSales}}份</text>
    </view>
  </view>

  <view class="ibox">
    <view class="ibox-title">
      <text>规格</text>
    </view>
    <view class='ibox-item'>
      <text>重量：{{product.weight}}</text>
    </view>
     <view class='ibox-item'>
      <text>包装：{{product.packing}}</text>
    </view>
     <view class='ibox-item'>
      <text>保质期：{{product.shelfLife}}</text>
    </view>
     <view class='ibox-item'>
      <text>储藏方式：{{product.storageMode}}</text>
    </view>
  </view>

  <block>
    <view>
      <image></image>
    </view>
  </block>
</scroll-view>


<!-- 底部悬浮栏 -->
<view class="detail-nav">
  <image src="../../resources/pic/orderBox.png" bindtap='tocart'/>
  <view class="line_nav"></view>
  <button class="button-green" bindtap="addProduct" formType="submit">加入购物车</button>
</view>